.sidebar.animated.fadeInDown
  .logo-title
    .title
      img(src= url_for('images/logo@2x.gif'),style="width:127px;border-radius: 50%;margin-bottom: 16px;")
      h3(title="")
        a(href="/")= config.title
      if theme.description
        .description
          p= theme.description

  ul.social-links
    if theme.weixin
      li
        a(title="微信：" + theme.weixin)
          i.fa.fa-weixin
    if theme.qq
      li
        a(title="QQ：" + theme.qq)
          i.fa.fa-qq
    if theme.github
      li
        a(href=url_for(theme.github), target="_blank" title="我的github")
          i.fa.fa-github
    if theme.mail
      li
        a(title="我的邮箱：" + theme.mail)
          i.fa.fa-envelope
  include footer
